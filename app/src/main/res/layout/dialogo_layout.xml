<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        tools:text="DC Superman"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/txvTitulo"/>

    <ImageView
        android:layout_width="116dp"
        android:layout_height="116dp"
        app:layout_constraintTop_toBottomOf="@id/txvTitulo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        tools:src="@mipmap/ic_launcher"
        android:id="@+id/imgSuperheroe"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txvTitulo"
        app:layout_constraintLeft_toRightOf="@id/imgSuperheroe"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        tools:text="Precio: 200"
        android:textStyle="bold"
        android:id="@+id/txvPrecio"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txvPrecio"
        app:layout_constraintLeft_toRightOf="@id/imgSuperheroe"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        tools:text="Lorem ipsum dolor sit amet consectetur adipiscing elit nibh sociis, potenti auctor venenatis aliquam fermentum platea ad torquent, massa dui sed ante posuere eget tellus nullam."
        android:ems="10"
        android:id="@+id/txvDescripcion"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txvDescripcion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:hint="@string/ingresa_tu_nombre"
        android:id="@+id/edtNombre"/>



</androidx.constraintlayout.widget.ConstraintLayout>